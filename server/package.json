    "express": "^4.18.2",
    "mongoose": "^8.1.0",
    "supertest": "^6.3.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prisma": "^5.8.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma"
